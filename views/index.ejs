         <!-- Swiper -->
         <div class="swiper mySwiper2" id="swiper-2">
            <div class="swiper-wrapper h-[450px]">
              
     
              <% products.forEach(product => { %>
                <div class="swiper-slide relative cursor-pointer h-[400px] w-full">
                  <a href="/men/shirts/<%= product._id %>">
                    <figure class="relative">
                      <img src="<%= product.imgUrl %>" alt="product" class="h-full w-full object-cover" />
                      <button class="absolute bottom-14 md:bottom-12 translate-x-[-50%] left-[50%] z-10 bg-white text-black md:px-8 md:py-4 px-6 py-[10px] hover:bg-gray-300 duration-150"><%= product.title %></button>
                  </figure>
                  </a>
                </div>
              <% }) %>        
            </div>
            <div class="swiper-pagination hidden md:block"></div>
          </div>
