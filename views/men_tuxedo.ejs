<div class="first-section grid grid-cols-1 md:grid-cols-2 lg:grid-cols-7 gap-1">
  <% classicFront.forEach(front => { %>
    <div class=" lg:col-span-4 relative w-full">
      <div class="absolute top-0 bottom-0 left-0 right-0 bg-black opacity-10"></div>
        <img src="<%=front.imgUrl%>" alt="" class="bg-cover object-cover h-full bg-no-repeat">
        <a class="absolute bottom-14 md:bottom-12 translate-x-[-50%] left-[50%] z-10 bg-white text-black md:px-8 md:py-4 px-6 py-[10px] hover:bg-gray-300 duration-150" href="/product_check"><%= front.title %></a>
    </div>
  <% }) %>
    
    <div class="lg:col-span-3 relative flex flex-col gap-1">
      
      <div class="relative">
        <div class="absolute top-0 bottom-0 left-0 right-0 bg-black opacity-10"></div>
          <img src="../imgs/men/tuxedo/white.jpg" alt="" class="bg-cover object-cover bg-no-repeat h-full">
      <a class="absolute bottom-14 md:bottom-12 translate-x-[-50%] left-[50%] z-10 bg-white text-black md:px-8 md:py-4 px-6 py-[10px] hover:bg-gray-300 duration-150" href="/product_check">Double-breasted Tuxedo</a>
      </div>
      <div class="relative">
        <div class="absolute top-0 bottom-0 left-0 right-0 bg-black opacity-10"></div>
          <img src="../imgs/men/tuxedo/black1.jpg" alt="" class="bg-cover object-cover bg-no-repeat h-full">
          <a class="absolute bottom-14 md:bottom-12 translate-x-[-50%] left-[50%] z-10 bg-white text-black md:px-8 md:py-4 px-6 py-[10px] hover:bg-gray-300 duration-150" href="/product_check">Traditional Tuxedo</a>
      </div>
    </div>

    </div>
    <div class="third-section grid grid-cols-1 md:grid-cols-2 lg:grid-cols-9 gap-1 mt-1">
      <% tuxedos.forEach(tuxedo => { %>
        <div class="man-3 lg:col-span-3 relative w-full">
          <img src="<%=tuxedo.imgUrl%>" alt="" class="bg-cover object-cover bg-no-repeat h-full">
          <button class="absolute bottom-14 md:bottom-12 translate-x-[-50%] left-[50%] z-10 bg-white text-black md:px-8 md:py-4 px-6 py-[10px] hover:bg-gray-300 duration-150"><%= tuxedo.title %></button>
        </div>
      <% }) %>
      
    </div>

    <div class="flex justify-center items-center w-full mt-6">
      <form action="/men/tuxedo/all" method="GET">
        <input type="submit" value="View All" class="bg-green-500 px-5 py-3 btn cursor-pointer">
      </form>
    </div>