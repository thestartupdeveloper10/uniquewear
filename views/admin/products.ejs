<div class="p-5 w-4/5" id="content">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-bold">Product</h1>
      <Link to="/newproduct">
        <button class="bg-teal-500 text-white px-3 py-2 rounded-md">Create</button>
      </Link>
    </div>
    <div class="flex">
      <div class="w-1/2">
        <Chart data={productData} dataKey="Sales" title="Sales Performance" />
      </div>
      <div class="w-1/2 p-5 m-5 shadow">
        <div class="flex items-center">
          <img
            src="https://images.pexels.com/photos/7156886/pexels-photo-7156886.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500"
            alt=""
            class="w-10 h-10 rounded-full object-cover mr-4"
          />
          <span class="font-semibold">Apple Airpods</span>
        </div>
        <div class="mt-3">
          <div class="flex justify-between w-48">
            <span class="font-light">id:</span>
            <span class="font-semibold">123</span>
          </div>
          <div class="flex justify-between w-48">
            <span class="font-light">sales:</span>
            <span class="font-semibold">5123</span>
          </div>
          <div class="flex justify-between w-48">
            <span class="font-light">active:</span>
            <span class="font-semibold">yes</span>
          </div>
          <div class="flex justify-between w-48">
            <span class="font-light">in stock:</span>
            <span class="font-semibold">no</span>
          </div>
        </div>
      </div>
    </div>
    <div class="p-5 m-5 shadow">
      <form class="flex">
        <div class="w-1/2 mr-4">
          <label class="text-gray-500 mb-2">Product Name</label>
          <input
            type="text"
            placeholder="Apple AirPod"
            class="w-full border-b border-gray-400 py-2 mb-4 focus:outline-none"
          />
          <label class="text-gray-500 mb-2">In Stock</label>
          <select
            name="inStock"
            id="idStock"
            class="w-full border border-gray-400 rounded-md py-2 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
          <label class="text-gray-500 mb-2">Active</label>
          <select
            name="active"
            id="active"
            class="w-full border border-gray-400 rounded-md py-2 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </div>
        <div class="w-1/2 flex flex-col justify-between">
          <div class="flex items-center">
            <img
              src="https://images.pexels.com/photos/7156886/pexels-photo-7156886.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500"
              alt=""
              class="w-24 h-24 rounded-md object-cover mr-4"
            />
            <label htmlFor="file" class="cursor-pointer">
              <Publish />
            </label>
            <input type="file" id="file" style={{ display: "none" }} />
          </div>
          <button class="bg-blue-800 text-white px-4 py-2 rounded-md font-semibold">
            Update
          </button>
        </div>
      </form>
    </div>
  </div>