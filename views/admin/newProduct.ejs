<div class="w-4/5" id="content">
    <h1 class="text-2xl font-bold mb-5">New Product</h1>
    <form class="mt-3">
      <div class="mb-4">
        <label class="text-gray-500 font-semibold mb-2">Image</label>
        <input type="file" id="file" class="border border-gray-400 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="mb-4">
        <label class="text-gray-500 font-semibold mb-2">Name</label>
        <input type="text" placeholder="Apple Airpods" class="border border-gray-400 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="mb-4">
        <label class="text-gray-500 font-semibold mb-2">Stock</label>
        <input type="text" placeholder="123" class="border border-gray-400 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="mb-4">
        <label class="text-gray-500 font-semibold mb-2">Active</label>
        <select name="active" id="active" class="border border-gray-400 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
      </div>
      <button class="bg-blue-800 text-white px-4 py-2 rounded-md font-semibold">Create</button>
    </form>
  </div>