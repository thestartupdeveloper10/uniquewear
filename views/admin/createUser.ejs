<div class="w-4/5" id="content">
    <h1 class="text-2xl font-bold mb-5">New User</h1>
    <form class="flex flex-wrap">
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Username</label>
        <input type="text" placeholder="john" class="h-10 px-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Full Name</label>
        <input type="text" placeholder="John Smith" class="h-10 px-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Email</label>
        <input type="email" placeholder="john@gmail.com" class="h-10 px-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Password</label>
        <input type="password" placeholder="password" class="h-10 px-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Phone</label>
        <input type="text" placeholder="+1 123 456 78" class="h-10 px-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Address</label>
        <input type="text" placeholder="New York | USA" class="h-10 px-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Gender</label>
        <div class="flex items-center mt-3">
          <div class="flex items-center mr-4">
            <input type="radio" name="gender" id="male" value="male" class="mr-2" />
            <label for="male" class="text-gray-500 text-base">Male</label>
          </div>
          <div class="flex items-center mr-4">
            <input type="radio" name="gender" id="female" value="female" class="mr-2" />
            <label for="female" class="text-gray-500 text-base">Female</label>
          </div>
          <div class="flex items-center">
            <input type="radio" name="gender" id="other" value="other" class="mr-2" />
            <label for="other" class="text-gray-500 text-base">Other</label>
          </div>
        </div>
      </div>
      <div class="w-96 mr-5 mb-4">
        <label class="mb-2 text-sm font-semibold text-gray-500">Active</label>
        <select class="h-10 px-3 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" name="active" id="active">
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
      </div>
      <button class="bg-blue-800 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-300">Create</button>
    </form>
  </div>